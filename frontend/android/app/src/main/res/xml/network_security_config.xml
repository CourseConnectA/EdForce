<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- No cleartext domains needed for production. Only HTTPS is allowed. -->
    
    <!-- Base configuration for all other connections -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
